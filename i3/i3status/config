general {
   colors = true
   color_good = "#859900"
   color_bad = "#dc322f"
   color_degraded = "#cb4b16"
   output_format = "i3bar"
   interval = 2
}

order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "battery 0"
order += "cpu_usage 0"
order += "cpu_temperature 0"
order += "tztime local"

wireless _first_ {
        format_up = "📶:%quality"
        format_down = "📶: down"
}


battery 0 {
        format = "🔋%percentage %remaining"
}



tztime local {
        format = "🗓️%Y-%m-%d 🕑%H:%M:%S"
}

disk "/" {
        format = "💾%avail"
}

disk "/home" {
        format = "💾%avail"
}

cpu_usage {
        format = " 📉%usage "
}

cpu_temperature 0 {
        format = "🌡️%degrees°C "
}
