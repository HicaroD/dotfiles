[
  {
    "context": "Editor && vim_mode == normal && !menu",
    "bindings": {
      "ctrl-h": "pane::ActivatePreviousItem",
      "ctrl-l": "pane::ActivateNextItem"
    }
  },
  {
    "context": "FileFinder || (FileFinder > Picker > Editor) || (FileFinder > Picker > menu)",
    "bindings": {
      "ctrl-v": "pane::SplitRight",
      "ctrl-h": "pane::SplitDown"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      // put key-bindings here if you want them to work in normal & visual mode
      // Git
      ", g h d": "editor::ToggleSelectedDiffHunks",
      ", g h r": "git::Restore",

      // Toggle inlay hints
      ", t i": "editor::ToggleInlayHints",

      // Toggle soft wrap
      ", u w": "editor::ToggleSoftWrap",

      // NOTE: Toggle Zen mode, not fully working yet
      ", c z": "workspace::ToggleCenteredLayout",

      // Open markdown preview
      ", m p": "markdown::OpenPreview",
      ", m P": "markdown::OpenPreviewToTheSide",

      // Search word under cursor
      ", s w": "pane::DeploySearch",

      // Go to file with `gf`
      "g f": "editor::OpenExcerpts"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      // +LSP
      ", l c a": "editor::ToggleCodeActions",
      ", r": "editor::Rename",
      "g d": "editor::GoToDefinition",
      "g i": "editor::GoToImplementation",
      ", l t d": "editor::GoToTypeDefinition",
      ", l r": "editor::FindAllReferences",
      "ctrl-e": "editor::GoToDiagnostic",
      "] d": "editor::GoToDiagnostic",
      "[ d": "editor::GoToPreviousDiagnostic",
      // Symbol search
      ", l s": "outline::Toggle",
      ", l w s": "project_symbols::Toggle",
      // Diagnostic
      ", l d": "diagnostics::Deploy",

      // +Git
      // Git prev/next hunk
      "] h": "editor::GoToHunk",
      "[ h": "editor::GoToPreviousHunk",

      // + Buffers
      // File finder
      ", f": "file_finder::Toggle",
      // Project search
      ", /": "pane::DeploySearch",
      // Show project panel with current file
      ", p s": "workspace::NewSearch",
      ", c": "pane::CloseActiveItem",
      ", e": "workspace::ToggleLeftDock",
      // Formatter
      "ctrl-i": "editor::Format"
    }
  },
  {
    // Vim: File Tree ("ProjectPanel") actions
    "context": "ProjectPanel && not_editing",
    "bindings": {
      ", e": "workspace::ToggleLeftDock",
      "h": "project_panel::CollapseSelectedEntry",
      "l": "project_panel::ExpandSelectedEntry",
      "j": "menu::SelectNext",
      "k": "menu::SelectPrevious",
      "space": "project_panel::OpenPermanent",
      "r": "project_panel::Rename",
      "z c": "project_panel::CollapseSelectedEntry",
      "z o": "project_panel::ExpandSelectedEntry",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste",
      "d": "project_panel::Delete",
      "a": "project_panel::NewFile",
      "shift-y": "workspace::CopyRelativePath"
    }
  }
]
